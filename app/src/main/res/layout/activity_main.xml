                            tools:ignore="VectorDrawableCompat" />

                        <TextView
                            android:id="@+id/phos_body_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/phos_body_txt" />
